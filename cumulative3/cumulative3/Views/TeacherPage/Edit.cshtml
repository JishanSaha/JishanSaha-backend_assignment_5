@model cumulative3.Models.Teacher;

<div id="containershow">
    <nav>
        <a class="navlink" href="/TeacherPage/Show/@Model.Id">Back</a>
    </nav>
    <h2>New Teacher</h2>
    <form method="POST" action="/TeacherPage/Update/@Model.Id">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.FName" />

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.LName" />

        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">Employee Number:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.ENo" />

        </div>
        <div class="inputrow">
            <label for="Salary">Last Name:</label>
            <input type="text" id="Salary" name="Salary" value="@Model.Salary" />

        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher" />
        </div>
    </form>
</div>